

@Ek.on_message(filters.private & filters.comman(["lyrics"]))
async def sng(bot, message):
        hy = await message.reply_text("`Searching ğŸ”`")
        song = message.text
        chat_id = message.from_user.id
        rpl = lyrics(song) 
        try:
                await hy.delete()
